{
  "name": "core-security",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/core/security/src",
  "projectType": "library",
  "tags": ["scope:core", "type:util"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/core/security",
        "main": "libs/core/security/src/index.ts",
        "tsConfig": "libs/core/security/tsconfig.lib.json",
        "assets": [
          "libs/core/security/*.md",
          {
            "input": "libs/core/security",
            "glob": "package.json",
            "output": "."
          },
          {
            "input": "libs/core/security/src/lib/i18n",
            "glob": "**/*.json",
            "output": "i18n"
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/core/security/jest.config.cts",
        "passWithNoTests": true
      }
    }
  }
}