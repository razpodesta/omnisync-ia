/** libs/tools/internal-scripts/package.json */
{
  "name": "@omnisync/core-internal-scripts",
  "version": "1.0.0",
  "description": "Nodo maestro de gobernanza y automatización sistémica. Orquesta la agregación i18n, auditorías de integridad y pulso de infraestructura bajo el protocolo OEDP V4.0.",
  "author": "Raz Podestá <Creator> - MetaShark Tech",
  "private": true,
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "import": "./src/index.js",
      "default": "./src/index.js"
    },
    "./run-guardian": "./src/lib/run-guardian.js",
    "./run-i18n-build": "./src/lib/run-i18n-build.js",
    "./run-connectivity": "./src/lib/run-connectivity.js"
  },
  "main": "./src/index.js",
  "types": "./src/index.d.ts",
  "dependencies": {
    "tslib": "^2.8.1",
    "zod": "^4.3.6",
    "glob": "^11.0.0",
    "lodash": "^4.17.23",
    /**
     * @section ADN Core Sincronizado
     * Garantizamos que el cargador de módulos localice las capas fundamentales 
     * mediante la vinculación nativa del workspace pnpm/nx.
     */
    "@omnisync/core-telemetry": "workspace:*",
    "@omnisync/core-sentinel": "workspace:*",
    "@omnisync/core-contracts": "workspace:*",
    "@omnisync/core-persistence": "workspace:*"
  },
  "devDependencies": {
    /** 
     * Se inyecta tsx para asegurar la capacidad de ejecución de scripts 
     * en modo aislado durante la depuración de infraestructura.
     */
    "tsx": "^4.19.0"
  },
  "keywords": [
    "omnisync",
    "internal-scripts",
    "sovereign-governance",
    "oedp-v4"
  ]
}