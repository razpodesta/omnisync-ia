/** tsconfig.base.json */
{
  "compileOnSave": false,
  "compilerOptions": {
    /**
     * @section Soberanía de Identidad de Archivos
     */
    "rootDir": ".",
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": false,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,

    /**
     * @section Configuración de Lenguaje y Entorno (ES2022+)
     */
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2022", "dom", "dom.iterable"],

    /**
     * @section Integridad de Módulos e Interoperabilidad
     * RESOLUCIÓN TS1259: Habilita importaciones por defecto para React 19 y bibliotecas CJS.
     */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    /**
     * @section Soporte JSX Omnicanal
     * RESOLUCIÓN TS17004: Permite el uso de sintaxis JSX en librerías compartidas (ui-kit).
     */
    "jsx": "preserve",

    /**
     * @section Reglas de Calidad y Tipado Estricto (Protocolo OEDP)
     */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    /**
     * @section Optimización de Infraestructura
     */
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,

    /**
     * @section Path Mappings (LEGO Structure)
     * Mapa de soberanía para la resolución de piezas LEGO en el monorepo.
     * Toda ruta debe seguir el estándar de marca @omnisync.
     */
    "paths": {
      "@omnisync/core-telemetry": ["libs/core/telemetry/src/index.ts"],
      "@omnisync/core-security": ["libs/core/security/src/index.ts"],
      "@omnisync/core-contracts": ["libs/core/contracts/src/index.ts"],
      "@omnisync/core-sentinel": ["libs/core/sentinel/src/index.ts"],
      "@omnisync/core-media": ["libs/core/media-orchestrator/src/index.ts"],
      "@omnisync/ai-engine": ["libs/integrations/ai-engine/src/index.ts"],
      "@omnisync/ai-google": [
        "libs/integrations/ai-google-driver/src/index.ts"
      ],
      "@omnisync/vector-engine": [
        "libs/integrations/vector-engine/src/index.ts"
      ],
      "@omnisync/vector-qdrant": [
        "libs/integrations/vector-qdrant-driver/src/index.ts"
      ],
      "@omnisync/erp-engine": [
        "libs/integrations/erp-orchestrator/src/index.ts"
      ],
      "@omnisync/erp-mock": ["libs/integrations/erp-adapter-mock/src/index.ts"],
      "@omnisync/domain-tenants": ["libs/domain/tenants/src/index.ts"],
      "@omnisync/domain-support": ["libs/domain/support/src/index.ts"],
      "@omnisync/web-chat-driver": [
        "libs/integrations/web-chat-driver/src/index.ts"
      ],
      "@omnisync/web-chat-ui": ["libs/ui-kit/web-chat-widget/src/index.ts"],
      "@omnisync/tools": ["libs/tools/internal-scripts/src/index.ts"],
      "@omnisync/tests": ["tests/src/index.ts"],
      "@omnisync-ecosystem/omnichannel-orchestrator": [
        "libs/integrations/omnichannel-orchestrator/src/index.ts"
      ],
      "@omnisync-ecosystem/persistence": ["libs/core/persistence/src/index.ts"],
      "@omnisync/erp-odoo": ["libs/integrations/erp-odoo/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp", "dist", ".next"]
}
