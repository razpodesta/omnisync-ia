/** apps/admin-dashboard/tsconfig.json */
{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    /**
     * @section Configuración de Renderizado JSX
     * Se mantiene 'preserve' delegando la transformación final al motor
     * SWC/Turbopack optimizado para React 19.
     */
    "jsx": "preserve",

    /**
     * @section Estándares de Tipado Estricto (Protocolo OEDP V2.5)
     * Garantiza la erradicación de 'any' implícitos y la seguridad de nulabilidad.
     */
    "strict": true,
    "noEmit": true,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,

    /**
     * @section Soberanía de Entorno de Ejecución
     * Habilita capacidades modernas de DOM y ESNext para el Dashboard.
     */
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,

    /**
     * @property allowSyntheticDefaultImports
     * @description Crítico para la interoperabilidad con librerías CJS
     * y el estándar de importación de React 19.
     */
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,

    /**
     * @section Soberanía de Tipado de Frontera
     * Se añaden definiciones core para asegurar la coherencia del namespace global.
     */
    "types": ["node", "react", "react-dom"],

    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    /**
     * @note Inyección de Soberanía de Tipos
     * Permite la resolución de módulos externos sin tipos nativos y activos estáticos.
     */
    "index.d.ts",
    "../../libs/ui-kit/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "jest.config.cts",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
